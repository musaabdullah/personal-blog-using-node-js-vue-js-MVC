<div class="card mx-2 my-2 py-2 px-2">
    <div class="card-header text-white h3 bg-success">Blog form</div>
    <div class="card-body">
    <form>
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" placeholder="Enter blog title">
        </div>
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea type="text" class="form-control" id="content" placeholder="Enter blog content"> </textarea>
        </div>
        <div class="container text-center mt-2">
        <button class="btn btn-primary mr-2">Save</button>
        <button class="btn btn-danger">Reset</button>
        </div>
    </form>
</div>
</div>